{
  "compilerOptions": {
    "target": "esnext", // Изменён для поддержки современных возможностей
    "lib": ["dom", "dom.iterable", "esnext"], // Оставлено для работы с современными API браузера
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext", // Оставлено для поддержки динамического импорта и современного модульного подхода
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "types": ["node", "jest"],
    "baseUrl": ".",
    "paths": {
      "@pages": ["src/pages"],
      "@components": ["src/components"],
      "@ui": ["src/components/ui"],
      "@ui-pages": ["src/components/ui/pages"],
      "@utils-types": ["src/utils/types"],
      "@api": ["src/utils/burger-api.ts"],
      "@slices": ["src/services/slices"],
      "@selectors": ["src/services/selectors"]
    }
  },
  "include": ["src"],
  
    "exclude": ["node_modules", "dist", "src/service-worker.js"]
  
   // Добавлено исключение сборки и зависимостей
}
